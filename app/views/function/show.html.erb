<div class="content_header" style="width: 100%; margin-left: 0; max-width: 100000px;">
  <h4>Gastos da Federação por função</h4>
  <h6>
   <span>Acompanhe os gastos da federação por diferentes funções</span> 
  </h6> 
</div>


<div class="container" style="margin-left: 6%;">  
	<div class="z-depth-4" style="margin-right:auto;  margin-left:auto; margin-bottom:15px;">
  		<%= render 'chart_function' %>
	</div>

  <center>
    <div class="collection">
    <a class="collection-item active grey darken-4">Itens excluidos do gráfico   
    <div id='removed_chart_elements'></div>
    </div>    
  </center>

	<div class="row">
      <div class="col s6 m5">
        <div class="card-panel grey darken-4">      		
          <span class="white-text">
		     O gráfico de gastos por função mostra em quais áreas estão sendo investidos mais recursos. Para ver a quantia investida passe o mouse sobre uma das função.
          </span>
        </div>
      </div>
      <div class="col" style="width:58%;">
        <div class="card-panel grey darken-4">
          <span class="white-text">
             <b>Filtre o gráfico</b>
        <p>     
		<p></p>
		<button class="btn tooltipped" data-position="bottom" data-delay="50" data-tooltip="Visualize o gráfico em sua forma padrão" type="submit" name="action" id="Default" value="Padrão" onclick="select_default()" style="background:#006699;">Padrão<i class="material-icons right">send</i>
		</button>

		<button class="btn tooltipped" data-position="bottom" data-delay="50" data-tooltip="Filtre para o Top10 dos gastos da federação" type="submit" name="action id ="top_10" "value="Top10" onclick="select_top_10()" style="background:#006699;">Top 10
    	<i class="material-icons right">send</i>
		</button>
		
		<a class="waves-effect waves-light btn modal-trigger" href="#modal1" style="background:#006699;">Filtre</a>
		<p></p>
		
          </span>
         </div>
      </div>
    </div>
    <div id="share" style="margin-bottom: 15px;">
 <button onclick="location.href='https://www.facebook.com/sharer/sharer.php?u=http://aondebrasil.com<%= functions_path %>'"  title="Compartilhe no Facebook" target="_blank" class="btn btn-facebook" style="background:#133783">
        <i class="fa fa-facebook"></i>
</button> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp Compartilhamentos: <%=facebook_share_amount("http://aondebrasil.com#{request.fullpath}") %>
</div>
</div>

<!-- Modal Structure -->
<div id="modal1" class="modal">
  <div class="modal-content">	
	<div id="combobox_function" style="width:960px;  margin-right:auto;  margin-left:auto;">
		<%= form_tag functions_filter_path , method: 'get' do %>
     	<!-- <%= hidden_field_tag :id, params[:id]%> -->
     	<%= select_tag :year, options_for_select([["Até hoje!"],["2015"],["2014"],["2013"],["2012"],["2011"]]) %>
	     <%= select_tag :month, options_for_select([["Todos"],["Janeiro"],["Fevereiro"],["Março"],["Abril"],["Maio"],["Junho"],["Julho"],["Agosto"],["Setembro"],["Outubro"],["Novembro"],["Dezembro"]])%> 
<!--Confirmar se funciona-->
    	<button class="btn waves-effect waves-light" type="submit" name="action">Filtrar
    		<i class="material-icons right">send</i>
		</button>
		<% end %>
	</div>
  </div>
	<div class="modal-footer">
      <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Fechar</a>
    </div>
</div>
